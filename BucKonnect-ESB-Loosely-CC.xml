<?xml version="1.0" encoding="UTF-8"?>
<blueprint
    xmlns="http://www.osgi.org/xmlns/blueprint/v1.0.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.osgi.org/xmlns/blueprint/v1.0.0
			http://www.osgi.org/xmlns/blueprint/v1.0.0/blueprint.xsd
			 http://camel.apache.org/schema/spring">

  <bean id="dataSource" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:tcp://localhost/~/BucKonnect"/>
    <property name="user" value="sa"/>
    <property name="password" value="bucks"/>
  </bean>
  
  <bean id="dataDestination" class="org.h2.jdbcx.JdbcDataSource">
    <property name="URL" value="jdbc:h2:tcp://localhost/~/BucKonnectDestination"/>
    <property name="user" value="sa"/>
    <property name="password" value="bucks"/>
  </bean>
  
  <camelContext xmlns="http://camel.apache.org/schema/blueprint">
    <route>
      <from uri="timer://userDataTrigger?delay=2000&amp;period=2000&amp;repeatCount=1"/>
      <setBody>
	<constant>select * from USERS</constant>
      </setBody>
      <to uri="jdbc:dataSource"/>
      <split>
	<simple>${body}</simple>
	<log message="Data extracted ${body}"/>
	<setBody>
	  <simple>INSERT INTO USERS (OSU_EMAIL_ID, FIRST_NAME, PHONE_NUMBER) VALUES ( '${body[OSU_EMAIL_ID]}', '${body[FIRST_NAME]}', '${body[PHONE_NUMBER]}' ) </simple>
	</setBody>
	<to uri="jdbc:dataDestination"/>
      </split>
    </route>
  </camelContext>
</blueprint>